// Fonction de tirage aléatoire
function tirerCarte() {
  const carte = cartes[Math.floor(Math.random() * cartes.length)];
  document.getElementById("nom-carte").textContent = carte.nom;
  document.getElementById("description-carte").textContent = carte.description;
}
